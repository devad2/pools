# PostgreSQL Configuration
POSTGRES_DB=poolside
POSTGRES_USER=poolside_user
POSTGRES_PASSWORD=poolside_pass
POSTGRES_PORT=5432

# PostgREST Configuration
POSTGREST_PORT=3000

# LLM Endpoint Configuration
# Set this to your external vLLM or OpenAI-compatible endpoint
# Examples:
#   - Local vLLM: http://localhost:8000
#   - Remote vLLM: https://your-vllm-server.com
#   - OpenAI: https://api.openai.com/v1
LLM_ENDPOINT=http://localhost:8000

# LLM API Key (if required by your endpoint)
# Leave empty for local vLLM, set for OpenAI or secured endpoints
LLM_API_KEY=

# LLM Model Name
# For vLLM: the model path you're serving
# For OpenAI: gpt-3.5-turbo, gpt-4, etc.
LLM_MODEL=microsoft/Phi-3-mini-4k-instruct

# Optional: Local vLLM Configuration (only if using docker-compose.vllm.yml)
VLLM_PORT=8000
VLLM_MODEL=microsoft/Phi-3-mini-4k-instruct
VLLM_MAX_MODEL_LEN=4096
